<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
  </head>
  <body>
    <h1>Delete Category</h1>
    {{#if affected_items}}
      <h2>The following items are part of
        {{category.name}}. Please delete them before deleting the category.</h2>
      <ul>
        {{#each affected_items}}
          <li>
            <a href={{this.url}}>{{this.name}}</a>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <h2>Are you sure you want to delete {{category.name}}?</h2>
      <form method="POST" , action="">
        <input type="hidden" name="id" required value={{category._id}} />
        <input class="buttonlink" type="submit" value="Yes" />
      </form>
    {{/if}}
  </body>
</html>