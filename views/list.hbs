<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
  </head>
  <body>
    <h1>List of {{type}}</h1>
    <div class="list-container">
      <ul id="list" class="itemlist">
        {{#each list}}
          <li class="list-item">
            <a href={{this.url}}>{{this.name}}</a>
            <img src={{this.image}} />
          </li>
        {{/each}}
      </ul>
    </div>
    <a href={{#eq type "Categories"}}"/categories/create"{{/eq}} {{#eq type "Items"}}"/items/create"{{/eq}} class="buttonlink">
      {{#eq type "Categories"}}Create New Category{{/eq}}
      {{#eq type "Items"}}Create New Item{{/eq}}
    </a>
  </body>
</html>